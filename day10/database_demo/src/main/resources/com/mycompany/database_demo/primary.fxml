<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="379.0" prefWidth="643.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.database_demo.PrimaryController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <FlowPane prefHeight="8.0" prefWidth="603.0">
         <children>
            <Label text="UserName" />
            <AnchorPane prefHeight="48.0" prefWidth="15.0" />
            <TextField fx:id="user_field" prefHeight="36.0" prefWidth="345.0" />
         </children>
      </FlowPane>
      <FlowPane prefHeight="8.0" prefWidth="603.0">
         <children>
            <Label text="Password" />
            <AnchorPane prefHeight="48.0" prefWidth="24.0" />
            <TextField fx:id="passwd_field" prefHeight="36.0" prefWidth="345.0" />
         </children>
      </FlowPane>
      <Button fx:id="login_btn" mnemonicParsing="false" onAction="#handleLogin" prefHeight="36.0" prefWidth="81.0" text="log in" />
      <Button fx:id="reg_btn" mnemonicParsing="false" onAction="#handleRegister" prefHeight="27.0" prefWidth="101.0" text="register" />
   </children>
</VBox>
